<%- include ('header') -%> 
<style>
  [type='checkbox']:checked ~ .lead {
    text-decoration: line-through !important;
    color: gray;
  }

  .flex {
    display: flex;
    align-items: center;
    border-bottom: 1px solid #f1f1f1;
  }

  input[type='checkbox'] {
    margin: 20px;
  }

  p {
    margin: 0;
    padding: 20px;
    font-size: 20px;
    font-weight: 200;
    color: #00204a;
  }
</style>
<div class="container mt-3">
      <div class="row mx-auto">
        <div class="col-md-6 mx-auto">
          <div class="card card-body mx-auto">
            <h1 class="card-heading text-center"><%= title%></h1>
            <div class="mb-3">
              <% tasks.forEach((task) => { %>
              <div>
                <form action="/delete" method="POST" class="flex">
                  <input type="checkbox" name="checkbox" value=<%= task._id %> onChange="this.form.submit()"/>
                  <p class="lead"><%= task.name %></p>
                  <input type="hidden" name="hidden" value="<%= title %>">
                </form>
              </div>
              <% }) %>
            </div>
            <form action="/" method="POST">
              <div class="form-group">
                <input
                  type="text"
                  name="task"
                  class="form-control"
                  placeholder="Enter task"
                  autocomplete="off"
                />
              </div>
              <div class="form-group">
                <button
                  type="submit"
                  value= '<%= title %>'
                  class="btn btn-primary btn-block rounded"
                  name= 'button'
                >Add Task</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
<%- include ('footer') -%> 